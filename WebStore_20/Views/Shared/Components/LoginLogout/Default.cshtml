@if (User.Identity.IsAuthenticated)
{
    <span>Hi, @User.Identity.Name</span>
    <form method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
        <input type="submit" value="Escape" class="btn btn-default" />
    </form>
}
else
{
    <div class="btn-group pull-right">
        <a asp-action="Login" asp-controller="Account" class="btn btn-default">Enter</a>
        <a asp-action="Register" asp-controller="Account" class="btn btn-default">Registration</a>
    </div>
}